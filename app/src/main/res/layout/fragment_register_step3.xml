<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_fragments"
        tools:context=".Register.RegisterStep3Fragment">

    <EditText
            android:id="@+id/editText_telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/telefono"
            android:layout_marginTop="40dp"
            android:drawableStart="@drawable/ic_local_phone"
            android:drawablePadding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints="phone"/>

    <TextView
            android:id="@+id/textView_codigo_validacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agrega_codigo_validacion"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editText_telefono"/>

    <EditText
            android:id="@+id/editText_codigo_validacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/codigo_validacion"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView_codigo_validacion"
            android:autofillHints="phone"/>

    <TextView
            android:id="@+id/textView_no_recibÃ­_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_recibi_codigo"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/button_continuar"/>

    <Button
            android:id="@+id/button_continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/FormsButtonStyle"
            android:text="@string/continuar"
            android:layout_marginBottom="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>