<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/shadow"/>
            <corners android:radius="@dimen/corner_radius_items"/>
        </shape>
    </item>

    <item
            android:bottom="4dp"
            android:right="@dimen/shadow_margin_items"
            android:left="@dimen/shadow_margin_items"
            android:top="1dp">

        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="@dimen/corner_radius_items"/>
        </shape>
    </item>

</layer-list>