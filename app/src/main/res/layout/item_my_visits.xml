<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/shape_round_corners_menus"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginBottom="12dp"
        android:layout_height="140dp">

        <ImageView
                android:id="@+id/imageView_place"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                android:scaleType="fitXY"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:src="@tools:sample/avatars"/>

        <TextView
                android:id="@+id/textView_place_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:maxLines="1"
                app:layout_constraintStart_toEndOf="@id/imageView_place"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/imageView_place"
                tools:text="Cocina La concordia"
                android:layout_marginStart="12dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_texts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.75"/>

        <View
                android:layout_width="2dp"
                android:layout_height="0dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toStartOf="@id/guideline_texts"
                app:layout_constraintTop_toBottomOf="@id/textView_place_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:id="@+id/textView_your_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/your_score"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textView_place_title"
                app:layout_constraintEnd_toStartOf="@id/guideline_texts"
                app:layout_constraintStart_toEndOf="@id/imageView_place"/>

        <TextView
                android:id="@+id/textView_user_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toBottomOf="@id/textView_your_score"
                app:layout_constraintEnd_toStartOf="@id/guideline_texts"
                app:layout_constraintStart_toEndOf="@id/imageView_place"
                tools:text="Has dado 3"/>

        <TextView
                android:id="@+id/textView_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/distance"
                android:gravity="start"
                android:layout_marginStart="8dp"

                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/textView_place_title"
                app:layout_constraintStart_toEndOf="@id/guideline_texts"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/textView_place_distance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/textView_distance"
                app:layout_constraintStart_toEndOf="@id/guideline_texts"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="3.5 Km"/>

</androidx.constraintlayout.widget.ConstraintLayout>